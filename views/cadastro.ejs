<%- include ('partials/header') %>
<body class="main-content main-bg hidden-x">
    <%- include ('partials/navbar.ejs') %>

    <div class="box-central">
        <form action="/cadastro" class="register" id="register" method="post" autocomplete="off">
            <div class="grid">
                <div class="esquerda">
                    <h2 class="acima">Dados</h2>
                    <h2 class="abaixo">pessoais</h2>
                    <P>insira seus dados a baixo para</P>
                    <p>criar sua conta para começar.</p>
                    <label>Nome Completo</label>
                    <input type="text" id="nome" class="nome" name="nome" placeholder="ex:José da Silva">
                    <label>Email</label>
                    <input type="text" id="email" class="email" name="email" placeholder="exemplo@email.com">
                </div>
                <div class="direita">
                    <label>CPF</label>
                    <input type="text" id="cpf" class="cpf" name="cpf" placeholder="123.456.789-10">
                    <label>Data de Nascimento</label>
                    <input type="date" id="data" name="data" class="data-de-nacimento" placeholder="DD/MM/AAAA">
                    <label>Senha</label>
                    <input type="password" id="criar-senha" name="senha" class="criar-senha" placeholder="********">
                    <label>Confirmar Senha</label>
                    <input type="password" id="confirmar-senha" name="confirmar_senha" class="confirmar-senha" placeholder="********">
                    <button type="submit" id="cadastro" name="cadastro" class="cadastro">Entrar</button>
                </div>
            </div>
        </form>
    </div>
</body>
</html>